    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="140dp"
        android:layout_height="140dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgCircleScrollImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/padding_default_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_cloud"
            />

        <TextView
            android:id="@+id/txtTituloScrollImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8sp"
            android:textSize="22dp"
            android:textStyle="bold"
            android:text="Titulo"
            android:textColor="@color/color_surface"
            android:layout_marginTop="@dimen/padding_default_16"
            app:layout_constraintTop_toBottomOf="@id/imgCircleScrollImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
